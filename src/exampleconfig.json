{
  "colors": {
    "primary": "#2c5e92",
    "secondary": "#3a7d7c",
    "accent": "#e63946",
    "light": "#f8f9fa",
    "dark": "#212529",
    "gray": "#6c757d",
    "lightGray": "#e9ecef"
  },
  "typography": {
    "bodyFont": "'Inter', sans-serif",
    "headingFont": "'Space Grotesk', sans-serif",
    "baseSize": "1rem",
    "scale": {
      "h1": "3.5rem",
      "h2": "2.5rem",
      "h3": "1.8rem",
      "h4": "1.4rem",
      "h5": "1.1rem"
    },
    "lineHeight": "1.6"
  },
  "spacing": {
    "sectionPadding": "5rem 0",
    "elementPadding": "0.8rem 1.8rem",
    "containerPadding": "0 2rem",
    "gridGap": "2rem",
    "borderRadius": {
      "small": "4px",
      "medium": "8px",
      "large": "16px",
      "full": "50px"
    }
  },
  "shadows": {
    "small": "0 4px 6px rgba(0, 0, 0, 0.05)",
    "medium": "0 10px 15px rgba(0, 0, 0, 0.08)",
    "large": "0 20px 25px rgba(0, 0, 0, 0.1)",
    "buttonHover": "0 4px 12px rgba(44, 94, 146, 0.2)",
    "card": "0 10px 30px rgba(0, 0, 0, 0.05)",
    "cardHover": "0 20px 40px rgba(0, 0, 0, 0.1)"
  },
  "components": {
    "navbar": {
      "height": "80px",
      "background": "rgba(255, 255, 255, 0.95)",
      "blur": "10px",
      "linkHoverEffect": "underline-grow"
    },
    "hero": {
      "minHeight": "90vh",
      "backgroundEffect": "radial-gradient",
      "contentWidth": "600px"
    },
    "projectCard": {
      "minWidth": "300px",
      "imageHeight": "200px",
      "hoverEffect": "lift"
    },
    "buttons": {
      "transition": "all 0.3s ease",
      "hoverEffect": "translateY(-3px)"
    }
  },
  "breakpoints": {
    "mobile": "576px",
    "tablet": "768px",
    "desktop": "992px",
    "largeDesktop": "1200px"
  },
  "animations": {
    "duration": "0.3s",
    "easing": "cubic-bezier(0.175, 0.885, 0.32, 1.275)"
  },
  "darkMode": {
    "light": "#121212",
    "dark": "#e9ecef",
    "lightGray": "#2d2d2d"
  }
}